<h2> Forgot password</h2>


<%= form_with url: password_reset_path do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.submit 'Confirm email', class: 'btn btn-primary' %>
  </div>

<% end %>