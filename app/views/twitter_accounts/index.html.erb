<div class="container">

  <div class="sub-nav d-flex m-2 justify-content-between align-items-center">
    <h1> Twitter Accounts</h1>
    <%= button_to 'connect a twitter account', '/auth/twitter', method: :post, class: 'btn btn-secondary' %>
  </div>

  <div class="container ">
    <% @twitter_accounts.each do |account| %>
      <div class="outer d-flex justify-content-between p-1 align-items-center">
        <div class="profile d-flex mx-1">
          <%= image_tag account[:image] %>
        <div class="left d-flex flex-column mx-1">
          <div class="name">
            <%= account[:name] %>
          </div>
          <div class="username">
            <%= account[:username] %>
          </div>
        </div>
        </div>
        <%= button_to 'remove', account, method: :delete, class: 'btn btn-danger p-2' %>
      </div>
    <% end %>
  </div>

</div>